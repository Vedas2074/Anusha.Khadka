@model Employee

<form asp-controller="Employee" asp-action="Add" method="POST">
  <div class="form-group">
    <label asp-for="FirstName">FirstName</label>
    <span asp-validation-for="FirstName" class="text-danger"></span>
    <input type="text" class="form-control" asp-for="FirstName"  placeholder="Enter first name">
    
  </div>
  <div class="form-group">
    <label asp-for="LastName">LastName</label>
    <span asp-validation-for="LastName" class="text-danger"></span>
    <input type="text" class="form-control" id="LastName" asp-for="LastName" placeholder="Enter last name">
  </div>
  <div class="form-group">
    <label asp-for="Address">Address</label>
    <input type="text" class="form-control" id="Address" asp-for="Address" placeholder="Enter address">
  </div>
  <div class="form-group">
    <label asp-for="Age">Age</label>
    <input type="number" class="form-control" id="Age"  asp-for="Age" placeholder="Enter Age">
  </div>
  <div class="form-group">
    <label asp-for="Salary">Salary</label>
    <input type="number" class="form-control" id="Salary" asp-for="Salary" placeholder="Enter Salary">
  </div>
  
  <button type="submit" class="btn btn-primary">Add Employee</button>
</form>
